<%= render "shared/card" do %>
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div id="<%= dom_id(grading_task) %>_status_badge">
        <%= render "grading_tasks/task_status_badge", grading_task: grading_task %>
      </div>

      <div class="text-sm text-gray-500">
        Created <%= time_ago_in_words(grading_task.created_at) %> ago
      </div>
    </div>

    <%= render "shared/card", title: "Assignment Prompt" do %>
      <p class="text-gray-600"><%= grading_task.assignment_prompt %></p>
    <% end %>

    <%= render "shared/card", title: "Grading Rubric" do %>
      <p class="text-gray-600"><%= grading_task.grading_rubric %></p>
    <% end %>

    <%= render "shared/card", title: "Progress" do %>
      <div class="mt-2">
        <div id="<%= dom_id(grading_task) %>_progress_metrics">
          <%= render "grading_tasks/progress_metrics", grading_task: grading_task, student_submissions: student_submissions %>
        </div>
        
        <div id="<%= dom_id(grading_task) %>_submission_counts">
          <%= render "grading_tasks/submission_counts", student_submissions: student_submissions %>
        </div>
      </div>
    <% end %>

    <%= render "shared/card", title: "Student Submissions" do %>
      <div id="student_submissions" class="mt-2 space-y-3">
        <% if student_submissions.any? %>
          <%= render student_submissions %>
        <% else %>
          <p class="text-gray-500 italic">No student submissions found yet. They'll appear here once they're processed.</p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %> 