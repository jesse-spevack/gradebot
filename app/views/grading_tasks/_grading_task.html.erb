<%= render "shared/card" do %>
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div id="<%= dom_id(grading_task) %>_status_badge">
        <%= render "grading_tasks/task_status_badge", grading_task: grading_task %>
      </div>

      <div class="text-sm text-gray-500">
        Created <%= time_ago_in_words(grading_task.created_at) %> ago
      </div>
    </div>

    <div class="divide-y divide-gray-200">
      <!-- Assignment Prompt Section -->
      <section class="py-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Assignment Prompt</h2>
        <% if grading_task.formatted_assignment_prompt.present? %>
          <div class="prose prose-blue max-w-none">
            <%= grading_task.formatted_assignment_prompt.html_safe %>
          </div>
        <% else %>
          <p><%= grading_task.assignment_prompt %></p>
        <% end %>
      </section>

      <!-- Grading Rubric Section -->
      <section class="py-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Grading Rubric</h2>
        <div class="prose prose-blue max-w-none">
          <% if grading_task.formatted_grading_rubric.present? %>
            <%= grading_task.formatted_grading_rubric.html_safe %>
          <% else %>
            <p><%= grading_task.grading_rubric %></p>
          <% end %>
        </div>
      </section>

      <!-- Progress Section -->
      <section class="py-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Progress</h2>
        <div>
          <%= render "grading_tasks/progress_section", grading_task: grading_task, student_submissions: student_submissions %>
        </div>
      </section>

      <!-- Student Submissions Section -->
      <section class="py-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Student Submissions</h2>
        <div id="student_submissions">
          <% if student_submissions.any? %>
            <div data-controller="submission-refresh" 
                data-submission-refresh-interval-value="3000"
                data-submission-refresh-grade-task-id-value="<%= grading_task.id %>">
              <%= render 'student_submissions/submission_list', submissions: student_submissions %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="p-3 bg-blue-50 rounded-xl inline-flex">
                <%= render "shared/icons/document", class: "h-10 w-10 text-blue-500" rescue nil %>
              </div>
              <h3 class="mt-3 text-lg font-medium text-gray-900">No submissions yet</h3>
              <p class="mt-2 text-sm text-gray-500 max-w-sm mx-auto">
                Student submissions will appear here once they're processed. Check back soon.
              </p>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
<% end %> 