<%# Usage: render "grading_tasks/form", grading_task: grading_task %>

<%= form_with(model: grading_task, class: "space-y-6") do |form| %>
  <% if grading_task.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-6">
      <div class="flex items-center gap-x-3">
        <div>
          <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(grading_task.errors.count, "error") %> prohibited this grading task from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% grading_task.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :folder_name, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :folder_name, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "e.g. Week 3 Assignments" %>
    </div>
  </div>

  <div>
    <%= form.label :assignment_prompt, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :assignment_prompt, rows: 4, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Describe the assignment prompt..." %>
    </div>
  </div>

  <div>
    <%= form.label :grading_rubric, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :grading_rubric, rows: 4, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Describe the grading rubric..." %>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-3">
    <%= link_to "Cancel", grading_tasks_path, class: "rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    <%= form.submit class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
