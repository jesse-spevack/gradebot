<%#
  Displays counts of student submissions by status
  
  Parameters:
  - student_submissions: Collection of student submissions
%>

<div class="mt-4">
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    <!-- Pending -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-3">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-2 bg-yellow-50 rounded-md">
          <%= render "shared/icons/clock", class: "h-5 w-5 text-yellow-600" %>
        </div>
        <div class="ml-3">
          <p class="text-xs font-medium text-gray-500">Pending</p>
          <p class="text-xl font-semibold text-gray-900"><%= student_submissions.pending.count %></p>
        </div>
      </div>
    </div>
    
    <!-- Processing -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-3">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-2 bg-blue-50 rounded-md">
          <%= render "shared/icons/processing", class: "h-5 w-5 text-blue-600" %>
        </div>
        <div class="ml-3">
          <p class="text-xs font-medium text-gray-500">Processing</p>
          <p class="text-xl font-semibold text-gray-900"><%= student_submissions.processing.count %></p>
        </div>
      </div>
    </div>
    
    <!-- Completed -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-3">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-2 bg-green-50 rounded-md">
          <%= render "shared/icons/check", class: "h-5 w-5 text-green-600" rescue nil %>
        </div>
        <div class="ml-3">
          <p class="text-xs font-medium text-gray-500">Completed</p>
          <p class="text-xl font-semibold text-gray-900"><%= student_submissions.completed.count %></p>
        </div>
      </div>
    </div>
    
    <!-- Failed -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-3">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-2 bg-red-50 rounded-md">
          <%= render "shared/icons/x_mark", class: "h-5 w-5 text-red-600" rescue nil %>
        </div>
        <div class="ml-3">
          <p class="text-xs font-medium text-gray-500">Failed</p>
          <p class="text-xl font-semibold text-gray-900"><%= student_submissions.failed.count %></p>
        </div>
      </div>
    </div>
  </div>
</div> 