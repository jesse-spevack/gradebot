<%#
  Display a single grading task as a table row (for desktop view)
  
  Parameters:
  - task: The grading task object to display
%>

<tr data-task-id="<%= task.id %>" onclick="window.location='<%= grading_task_path(task) %>'" class="hover:bg-gray-50 transition-colors duration-150 cursor-pointer">
  <td class="whitespace-nowrap py-4 pl-6 pr-3">
    <div class="flex items-center">
      <div class="p-1.5 bg-blue-50 rounded-md mr-3">
        <%= render "shared/icons/clipboard", class: "h-5 w-5 text-blue-600" %>
      </div>
      <span class="font-medium text-gray-900"><%= task.folder_name %></span>
    </div>
  </td>
  <td class="px-3 py-4">
    <p class="text-sm text-gray-600 line-clamp-2">
      <%= truncate(task.assignment_prompt, length: 150) %>
    </p>
  </td>
  <td class="whitespace-nowrap px-3 py-4">
    <div class="flex items-center text-sm text-gray-500">
      <%= render "shared/icons/clock", class: "h-4 w-4 mr-1.5 text-gray-400" %>
      <%= time_ago_in_words(task.created_at) %> ago
    </div>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm">
    <div class="flex items-center justify-end">
      <%= render "shared/icons/chevron_right", class: "h-5 w-5 text-gray-400" rescue nil %>
    </div>
  </td>
</tr> 