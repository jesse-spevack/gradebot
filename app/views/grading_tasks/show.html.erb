<body class="bg-gray-50 font-sans">
    <%= turbo_stream_from "rubric_#{@grading_task.rubric.id}" %>

    <div class="min-h-screen">
        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Task Overview -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6 transition-all duration-300 ease-in-out">
                <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-6">
                    <div>
                        <!-- Back button and Task Title -->
                        <div class="flex items-center">
                            <button class="mr-2 p-1 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                            </button>
                            <h2 class="text-xl font-semibold text-gray-900"><%= @grading_task.assignment_prompt.title %></h2>
                            <div class="ml-2">
                                <%= render partial: 'shared/status_badge', locals: { status: @grading_task.status, size: 'md' } %>
                            </div>
                        </div>
                        <p class="text-sm text-gray-500 mt-1"><%= @grading_task.assignment_prompt.subject %> • <%= @grading_task.assignment_prompt.grade_level_display %> • <%= @grading_task.assignment_prompt.due_date.present? ? "Due: #{@grading_task.assignment_prompt.due_date.strftime("%b %d, %Y")}" : "Created: #{time_ago_in_words(@grading_task.created_at)} ago" %></p>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
                    <!-- Assignment Prompt Card -->
                    <div id="assignmentCard" class="border border-gray-200 rounded-lg p-5 transition-all duration-300 ease-in-out bg-white hover:translate-y-[-2px] hover:shadow-lg">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                <h3 class="font-medium text-gray-900">Assignment Prompt</h3>
                            </div>
                            <div class="flex items-center space-x-4">
                                <span class="inline-flex items-center">
                                    <%= render partial: 'shared/status_badge', locals: { 
                                        status: @grading_task.rubric.present? && @grading_task.rubric.complete? ? 'completed' : 'processing', 
                                        size: 'sm',
                                        hide_processing_spinner: true
                                    } %>
                                </span>
                            </div>
                        </div>
                        <!-- Assignment content: changes based on processing toggle -->
                        <% if @grading_task.rubric.present? && @grading_task.rubric.complete? %>
                            <div id="assignmentNormal">
                                <p class="text-sm text-gray-600 mb-4"><%= truncate(@grading_task.assignment_prompt.content, length: 150) %></p>
                                <button id="viewAssignmentBtn" class="w-full mt-2 inline-flex items-center justify-center px-4 py-2 border border-blue-300 shadow-sm text-sm font-medium rounded-md text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300 ease-in-out">
                                    View Assignment
                                    <svg class="ml-2 -mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                </button>
                            </div>
                        <% else %>
                        <!-- Assignment processing state when rubric is not completed -->
                            <div id="assignmentProcessing">
                                <div class="flex flex-col items-center justify-center py-4">
                                    <div class="mb-3 relative">
                                        <div class="animate-pulse text-blue-500">
                                            <%= render partial: 'shared/icons/sparkles', locals: { class_name: 'h-12 w-12' } %>
                                        </div>
                                    </div>
                                    <p class="text-sm text-gray-600 text-center">GradeBot is analyzing your assignment prompt...</p>
                                </div>
                            </div>
                        <% end %>
                    </div>

                    <!-- Rubric Card -->
                    <div id="rubric_container_<%= @grading_task.rubric.id %>" class="border border-gray-200 rounded-lg p-5 transition-all duration-300 ease-in-out bg-white hover:translate-y-[-2px] hover:shadow-lg">
                        <%= render partial: 'grading_tasks/rubric_card', locals: { rubric: @grading_task.rubric } %>
                    </div>

                    <!-- Progress/Summary Card (shows different content based on view toggle) -->
                    <div class="border border-gray-200 rounded-lg p-5 transition-all duration-300 ease-in-out bg-blue-50 hover:translate-y-[-2px] hover:shadow-lg">
                        <!-- In Progress View -->
                        <div id="progressView">
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                    </svg>
                                    <h3 class="font-medium text-gray-900">Progress</h3>
                                </div>
                                <%= render partial: 'shared/status_badge', locals: { status: 'pending', size: 'sm' } %>
                            </div>
                            <div class="space-y-4">
                                <div>
                                    <div class="flex justify-between text-sm mb-2">
                                        <span class="text-gray-600">Submissions Graded:</span>
                                        <span class="font-medium text-gray-900">18/28</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-3">
                                        <div class="bg-blue-600 h-3 rounded-full animate-pulse" style="width: 64%"></div>
                                    </div>
                                </div>
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="text-gray-600">Estimated Completion:</span>
                                    <span class="ml-auto font-medium text-gray-900">~20 minutes</span>
                                </div>
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                    </svg>
                                    <span class="text-gray-600">AI Status:</span>
                                    <span class="ml-auto font-medium text-blue-600">Processing submissions...</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Completed View (hidden by default) -->
                        <div id="completedView" class="hidden">
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                                    </svg>
                                    <h3 class="font-medium text-gray-900">Class Summary</h3>
                                </div>
                                <%= render partial: 'shared/status_badge', locals: { status: 'completed', size: 'sm' } %>
                            </div>
                            <div class="space-y-3">
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    <span class="text-gray-600">Submissions Graded:</span>
                                    <span class="ml-auto font-medium text-gray-900">28/28</span>
                                </div>
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="text-gray-600">Completion Time:</span>
                                    <span class="ml-auto font-medium text-gray-900">1hr 15min</span>
                                </div>
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-yellow-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    <span class="text-gray-600">Area for Growth:</span>
                                    <span class="ml-auto font-medium text-gray-900">Analysis Depth</span>
                                </div>
                                <div class="flex items-center text-sm">
                                    <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="text-gray-600">Area of Strength:</span>
                                    <span class="ml-auto font-medium text-gray-900">Evidence Use</span>
                                </div>
                                <div class="pt-2">
                                    <button class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-300 ease-in-out">
                                        View Strategic Review
                                        <svg class="ml-2 -mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Class Insights Section (only shown in completed view) -->
            <div id="insightsSection" class="bg-white rounded-lg shadow-md p-6 mb-6 hidden">
                <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6">
                    <h3 class="text-lg font-medium text-gray-900 flex items-center">
                        <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Class Insights
                    </h3>
                    <button class="mt-4 md:mt-0 text-sm text-blue-600 hover:text-blue-800 transition-all duration-300 ease-in-out flex items-center">
                        Download Detailed Report
                        <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                    </button>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm transition-all duration-300 ease-in-out hover:translate-y-[-2px] hover:shadow-lg">
                        <div class="flex items-center justify-between mb-2">
                            <p class="text-sm text-gray-500">Submissions Complete</p>
                            <svg class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <p class="text-xl font-semibold text-gray-900">100%</p>
                        <p class="text-xs text-gray-600 mt-1">All 28 submissions processed</p>
                    </div>
                    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm transition-all duration-300 ease-in-out hover:translate-y-[-2px] hover:shadow-lg">
                        <div class="flex items-center justify-between mb-2">
                            <p class="text-sm text-gray-500">Processing Time</p>
                            <svg class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <p class="text-xl font-semibold text-gray-900">1hr 15min</p>
                        <p class="text-xs text-gray-600 mt-1">~2.7 min per submission</p>
                    </div>
                    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm transition-all duration-300 ease-in-out hover:translate-y-[-2px] hover:shadow-lg">
                        <div class="flex items-center justify-between mb-2">
                            <p class="text-sm text-gray-500">Areas of Strength</p>
                            <svg class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                            </svg>
                        </div>
                        <p class="text-xl font-semibold text-gray-900">Evidence</p>
                        <p class="text-xs text-gray-600 mt-1">Strong evidence use across class</p>
                    </div>
                    <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm transition-all duration-300 ease-in-out hover:translate-y-[-2px] hover:shadow-lg">
                        <div class="flex items-center justify-between mb-2">
                            <p class="text-sm text-gray-500">Areas for Growth</p>
                            <svg class="h-5 w-5 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                        </div>
                        <p class="text-xl font-semibold text-gray-900">Analysis</p>
                        <p class="text-xs text-gray-600 mt-1">Deeper critical analysis needed</p>
                    </div>
                </div>
            </div>

            <!-- Submissions List -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200/80 flex flex-col md:flex-row md:justify-between md:items-center space-y-4 md:space-y-0">
                    <h3 class="text-lg font-medium text-gray-900 flex items-center">
                        <!-- Changed to graduation cap icon per request -->
                        <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                        </svg>
                        Student Submissions
                        <!-- Status badge: changes based on view toggle -->
                        <%= render partial: 'shared/status_badge', locals: { status: 'info', display_label: '28 Total', size: 'sm' } %>
                    </h3>
                    <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2">
                        <div class="relative">
                            <input type="text" placeholder="Search students..." class="pl-8 pr-4 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 w-full">
                            <svg class="h-4 w-4 text-gray-400 absolute left-2.5 top-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                        <select class="text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 bg-white">
                            <option>All Status</option>
                            <option>Complete</option>
                            <option>Processing</option>
                            <option>Pending</option>
                            <option>Failed</option>
                        </select>
                    </div>
                </div>
                
                <!-- In Progress Submissions View -->
                <div id="inProgressSubmissions" class="divide-y divide-gray-100">
                    <% @student_submissions.each do |submission| %>
                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
                                    <%= render partial: 'shared/icons/document_text' %>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900"><%= submission.document_selection.name %></p>
                                    <p class="text-xs text-gray-500">Created: <%= time_ago_in_words(submission.created_at) %> ago</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: submission.status, size: 'sm' } %>
                            </div>
                        </div>
                    <% end %>
                    <!-- Example stubbed student submissions hidden from view, but for reference -->
                    <div class="hidden">
                        <!-- Completed submissions -->
                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <img class="h-10 w-10 rounded-full" src="/api/placeholder/40/40" alt="Student avatar">
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">Alex</p>
                                    <p class="text-xs text-gray-500">Submitted: Apr 1, 2025 • 10:45 AM</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: 'completed', size: 'sm' } %>
                                <button class="text-sm text-blue-600 hover:text-blue-800 transition-all duration-300 ease-in-out flex items-center">
                                    View Feedback
                                    <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <img class="h-10 w-10 rounded-full" src="/api/placeholder/40/40" alt="Student avatar">
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">Sarah</p>
                                    <p class="text-xs text-gray-500">Submitted: Apr 1, 2025 • 9:30 AM</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: 'completed', size: 'sm' } %>
                                <button class="text-sm text-blue-600 hover:text-blue-800 transition-all duration-300 ease-in-out flex items-center">
                                    View Feedback
                                    <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <!-- Processing submission -->
                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <img class="h-10 w-10 rounded-full" src="/api/placeholder/40/40" alt="Student avatar">
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">Michael</p>
                                    <p class="text-xs text-gray-500">Submitted: Apr 1, 2025 • 11:15 AM</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: 'processing', size: 'sm' } %>
                            </div>
                        </div>
                        
                        <!-- Pending submission -->
                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <img class="h-10 w-10 rounded-full" src="/api/placeholder/40/40" alt="Student avatar">
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">Emily</p>
                                    <p class="text-xs text-gray-500">Submitted: Apr 1, 2025 • 1:20 PM</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: 'pending', size: 'sm' } %>
                            </div>
                        </div>
                        
                        <!-- Failed submission -->
                        <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-300 ease-in-out">
                            <div class="flex items-center">
                                <img class="h-10 w-10 rounded-full" src="/api/placeholder/40/40" alt="Student avatar">
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">James</p>
                                    <p class="text-xs text-gray-500">Submitted: Apr 1, 2025 • 10:05 AM</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%= render partial: 'shared/status_badge', locals: { status: 'failed', size: 'sm' } %>
