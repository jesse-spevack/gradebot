<div class="bg-gray-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-6">
      <div class="flex items-center">
        <%= link_to grading_tasks_path, class: "mr-2 p-1 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <h2 class="text-xl font-semibold text-gray-900">Create New Grading Task</h2>
      </div>
      <p class="text-sm text-gray-500 mt-1">Configure your grading task details and grading criteria</p>
    </div>
    
    <!-- Grading Task Form -->
    <%= form_with model: @grading_task, local: true, class: "space-y-6" do |form| %>
      
      <!-- Hidden fields for form processing -->
      <%= form.hidden_field :id if @grading_task.persisted? %>
      
      <!-- Assignment Prompt Card -->
      <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg">
        <div class="flex items-center mb-4">
          <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="font-medium text-gray-900">Assignment Prompt</h3>
        </div>
        
        <%= form.fields_for :assignment_prompt do |ap_form| %>
          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= ap_form.label :title, "Assignment Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= ap_form.text_field :title, placeholder: "Essay Analysis: Impact of...", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
              </div>
              
              <div>
                <%= ap_form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= ap_form.text_field :subject, placeholder: "English language arts", class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
              </div>
              
              <div>
                <%= ap_form.label :grade_level, "Grade Level", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= ap_form.select :grade_level, 
                  AssignmentPrompt.grade_level_options,
                  {},
                  { class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" }
                %>
              </div>
              
              <div>
                <%= ap_form.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= ap_form.date_field :due_date, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
              </div>
            </div>
            
            <div>
              <%= ap_form.label :word_count, "Expected Word Count", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ap_form.number_field :word_count, placeholder: "e.g., 1000", class: "w-full sm:w-1/3 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
            </div>
            
            <div class="mt-6">
              <div class="flex justify-between items-center mb-2">
                <div class="flex items-center gap-2">
                  <%= ap_form.label :content, "Assignment Instructions", class: "block text-sm font-medium text-gray-700" %>
                </div>
              </div>
              
              <%= ap_form.text_area :content, rows: 8, class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm", placeholder: "Paste assignment instructions here..." %>            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Grading Rubric Card -->
      <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg" data-controller="rubric-toggle">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="font-medium text-gray-900">Grading Rubric</h3>
          </div>
          <div class="flex items-center">
            <div class="relative flex items-center">
              <%= form.check_box :ai_generate_rubric, 
                  class: "mr-2 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500", 
                  data: { 
                    rubric_toggle_target: "checkbox", 
                    action: "rubric-toggle#toggle" 
                  } %>
              <%= form.label :ai_generate_rubric, class: "inline-flex text-sm font-medium text-gray-700 items-center" do %>
                Generate with AI
                <span class="ml-1 text-blue-500">
                  <%= render partial: 'shared/icons/sparkles' %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="space-y-4">
          <div>
            <%= form.label :rubric, "Paste your rubric", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :rubric_raw_text, 
                rows: 6, 
                placeholder: "Paste your existing rubric here or check the box above to generate a rubric with AI.", 
                class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm",
                data: { rubric_toggle_target: "textarea" } %>
          </div>
        </div>
      </div>
      
      <!-- Student Work Section -->
      <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg">
        <div class="flex items-center mb-4">
          <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
          </svg>
          <h3 class="font-medium text-gray-900">Student Work</h3>
        </div>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center mb-2">
            <p class="text-sm text-gray-600">Select student submissions for grading</p>
          </div>
          
          <div data-controller="doc-picker" 
               data-doc-picker-hidden-class="hidden" 
               data-doc-picker-error-class="text-red-700" 
               data-doc-picker-max-documents-value="35">
            <%= form.hidden_field :document_data, data: { doc_picker_target: "documentData" } %>
            
            <div data-doc-picker-target="error" class="hidden mb-4 p-2 text-red-700 bg-red-100 rounded-md"></div>
            
            <div data-doc-picker-target="countError" class="hidden mb-4 p-3 bg-red-100 text-red-800 rounded-md flex items-start">
              <svg class="h-5 w-5 text-red-600 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <div>
                <p class="font-medium">Too many documents selected!</p>
                <p class="mt-1">Change your selection to not exceed 35 pieces of student work.</p>
              </div>
            </div>
            
            <div id="student-work-selector" class="p-6 mt-4 text-center">
              <button type="button" 
                      data-doc-picker-target="button"
                      data-action="click->doc-picker#showPicker"
                      class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                <svg class="mr-2 -ml-1 h-5 w-5" viewBox="0 0 48 48" width="24px" height="24px">
                  <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                  <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                  <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
                  <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                </svg>
                Select student work
              </button>
            </div>
            
            <div id="selected-documents" class="mt-4 p-4 bg-gray-50 rounded-lg hidden">
              <div class="flex justify-between items-center mb-3">
                <p class="text-sm font-medium text-gray-700">Selected Google documents (<span data-doc-picker-target="documentCountText">0</span> of 35)</p>
                <button type="button" 
                       data-action="click->doc-picker#showPicker" 
                       class="text-sm text-blue-600 hover:text-blue-800 cursor-pointer">
                  Change selection
                </button>
              </div>
              <ul id="document-list" class="space-y-2 max-h-64 overflow-y-auto">
                <!-- Document entries will be inserted here dynamically -->
              </ul>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Grading Settings Card -->
      <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg">
        <div class="flex items-center mb-4">
          <svg class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h3 class="font-medium text-gray-900">Grading Settings</h3>
        </div>
        
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-700 mb-2">Feedback Tone</p>
            <%= form.select :feedback_tone, 
              GradingTask::FEEDBACK_TONE.map { |key, value| [value, key] },
              {},
              { class: "w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" }
            %>
          </div>
        </div>
      </div>
      
      <!-- Action Button -->
      <div class="flex justify-end">
        <%= form.submit "Create Grading Task", class: "px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all", data: { doc_picker_target: "submitButton" } %>
      </div>
    <% end %>
  </div>
</div>
