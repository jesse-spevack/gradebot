<div class="mx-auto max-w-6xl px-6 py-12">
  <h1 class="text-6xl font-bold text-center text-gray-900 mb-2">New for you</h1> 
  <p class="text-center text-xl text-gray-600 mb-4">Weâ€™re constantly making GradeBot better.</p> 
  <p class="text-center text-lg text-gray-500 mb-8">Here are some of the notable features and improvements that we've made to GradeBot.</p> 

  <%# Pill at the top %>
  <div class="flex justify-center mb-8">
    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
      More coming everyday...
    </span>
  </div>

  <div class="relative">
    <%# Timeline line %>
    <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-px bg-gray-300" aria-hidden="true"></div>

    <%# Feature cards %>
    <% @features.each_with_index do |feature, index| %>
      <%# Outer container for spacing and relative positioning for dot %>
      <div class="mb-8 md:mb-16 relative pt-8">
        <%# Dot marker on the timeline %>
        <div class="absolute left-1/2 transform -translate-x-1/2 top-0 -mt-1.5 w-3 h-3 rounded-full bg-blue-600 z-10"></div>

        <%# Flex container for desktop layout %>
        <div class="md:flex">
          <%# Determine layout based on index %>
          <% if index.even? %>
            <%# Right side card: Spacer first, then Card %>
            <div class="hidden md:block md:w-9/12 md:pr-8"></div> 
            <div class="w-full md:w-9/10 md:pl-8 md:-ml-36"> 
              <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= feature.title %></h3>
                  
                  <%# Feature date %>
                  <% if feature.release_date? %>
                    <p class="text-sm text-gray-500 mb-4">
                      <%= feature.release_date.strftime("%B %d, %Y") %>
                    </p>
                  <% end %>

                  <%# Feature image %>
                  <% if feature.image.attached? %>
                    <%= image_tag url_for(feature.image), alt: feature.title, class: "w-full h-auto object-cover rounded-md mb-4" %>
                  <% end %>

                  <p class="text-gray-600">
                    <%= feature.description %>
                  </p>
                </div>
              </div>
            </div>
          <% else %>
            <%# Left side card: Card first, then Spacer %>
            <div class="w-full md:w-9/10 md:pr-8 md:-mr-36"> 
              <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= feature.title %></h3>
                  
                  <%# Feature date %>
                  <% if feature.release_date? %>
                    <p class="text-sm text-gray-500 mb-4">
                      <%= feature.release_date.strftime("%B %d, %Y") %>
                    </p>
                  <% end %>

                  <%# Feature image %>
                  <% if feature.image.attached? %>
                    <%= image_tag url_for(feature.image), alt: feature.title, class: "w-full h-auto object-cover rounded-md mb-4" %>
                  <% end %>

                  <p class="text-gray-600">
                    <%= feature.description %>
                  </p>
                </div>
              </div>
            </div>
            <div class="hidden md:block md:w-9/12 md:pl-8"></div> 
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
