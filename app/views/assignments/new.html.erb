<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold my-4">New Assignment</h1>

  <%= form_with(model: @assignment, local: true, class: "space-y-4") do |form| %>
    <% if @assignment.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <h2 class="font-bold"><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>
        <ul class="list-disc ml-5">
          <% @assignment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :subject, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :subject, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :grade_level, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :grade_level, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :instructions, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :instructions, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :raw_rubric_text, "Rubric (Optional)", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :raw_rubric_text, rows: 5, placeholder: "Enter your rubric text here...", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <p class="text-sm text-gray-500 mt-1">You can enter your own rubric or leave this blank.</p>
    </div>

    <%# TODO: Add document selection interface in future tasks %>

    <div class="flex items-center justify-between">
      <%= form.submit "Create Assignment", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancel", assignments_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
