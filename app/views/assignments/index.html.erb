<div class="bg-gray-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center">
        <h2 class="text-xl font-semibold text-gray-900">Assignments</h2>
      </div>
      <p class="text-sm text-gray-500">Manage your assignments and student work.</p>
    </div>

    <!-- New Assignment Button -->
    <div class="mb-6">
      <%= link_to new_assignment_path, class: "inline-flex items-center justify-center gap-x-2 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor" class="size-4 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <span>New Assignment</span>
      <% end %>
    </div>

    <!-- Assignments List -->
    <div id="assignments" class="space-y-4">
      <% @assignments.each do |assignment| %>
        <div class="bg-white rounded-lg shadow-md p-6 transition-all hover:shadow-lg">
          <div class="flex justify-between items-start">
            <div>
              <%= link_to assignment.title, assignment_path(assignment), class: "text-lg font-medium text-gray-900 hover:text-blue-600" %>
              <div class="mt-2 flex items-center text-sm text-gray-600 space-x-4">
                <span>Subject: <%= assignment.subject %></span>
                <span>Grade: <%= assignment.grade_level %></span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Created <%= time_ago_in_words(assignment.created_at) %> ago</p>
            </div>
            <%# Uncomment to enable delete functionality %>
            <%#= link_to assignment_path(assignment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this assignment?" }, class: "text-red-600 hover:text-red-800" do %>
              <%# <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg> %>
            <%# end %>
          </div>
        </div>
      <% end %>
      
      <% if @assignments.empty? %>
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <p class="text-gray-500">No assignments found. Create your first assignment to get started.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
