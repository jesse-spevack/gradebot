<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold my-4">Assignment: <%= @assignment.title %></h1>

  <div class="mb-4 p-4 border rounded shadow">
    <p><strong>Subject:</strong> <%= @assignment.subject %></p>
    <p><strong>Grade Level:</strong> <%= @assignment.grade_level %></p>
    <p><strong>Instructions:</strong></p>
    <div class="prose max-w-none">
      <%= simple_format(@assignment.instructions) %>
    </div>
    <% if @assignment.raw_rubric_text.present? %>
      <p><strong>Raw Rubric:</strong></p>
      <pre class="bg-gray-100 p-2 rounded"><%= @assignment.raw_rubric_text %></pre>
    <% end %>
    <p class="text-sm text-gray-500 mt-2">Created: <%= time_ago_in_words(@assignment.created_at) %> ago</p>
  </div>

  <div class="mt-6 space-x-2">
    <%= link_to "Back to Assignments", assignments_path, class: "text-blue-600 hover:underline" %>
    <%#= link_to "Edit", edit_assignment_path(@assignment), class: "text-blue-600 hover:underline" %>
    <%#= link_to "Delete", assignment_path(@assignment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
  </div>

  <%# TODO: Add sections for Rubric, Student Works, Insights (Tasks 36+) %>
</div>
