<div class="bg-white p-4 rounded-lg border border-gray-200 shadow-sm">
  <%= form_with url: url, method: :get, class: "space-y-4 md:space-y-0 md:flex md:items-end md:space-x-4" do |f| %>
    <div class="flex-1">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date, value: start_date&.strftime("%Y-%m-%d"), class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div>
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date, value: end_date&.strftime("%Y-%m-%d"), class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
        </div>
      </div>
    </div>
    
    <div class="flex-none">
      <div class="flex space-x-2">
        <div>
          <%= f.label :date_range, "Quick Select", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :date_range, 
                      options_for_select([
                        ["Last 7 days", 7],
                        ["Last 30 days", 30],
                        ["Last 90 days", 90],
                        ["Last 365 days", 365]
                      ], selected: params[:date_range] || 7),
                      { include_blank: "Custom Range" },
                      { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
        </div>
        
        <div class="self-end">
          <%= f.submit "Apply", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div> 