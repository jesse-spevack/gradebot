<%# 
  Reusable sign in button component
  
  Optional parameters:
  - provider: Authentication provider (default: 'google_oauth2')
  - text: Button text (default: 'Sign in with Google')
  - classes: Additional custom classes
%>

<% provider ||= 'google_oauth2' %>
<% text ||= 'Sign in with Google' %>
<% classes ||= "" %>

<%= button_to "/auth/#{provider}",
    method: :post,
    data: { turbo: false },
    class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 #{classes}" do %>
  <%= text %>
<% end %> 