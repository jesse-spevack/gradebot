<%#
  Renders a feature item with an icon, title, and description
  
  Required parameters:
  - title: The title of the feature
  - description: The description of the feature
  
  Optional parameters:
  - icon_path: SVG path data for the icon (default: checkmark icon)
  - container_classes: Additional classes for the container (default: "flex items-start")
%>

<%
  container_classes = local_assigns[:container_classes] || "flex items-start"
  icon_path = local_assigns[:icon_path] || "M5 13l4 4L19 7"
%>

<div class="<%= container_classes %>">
  <div class="bg-indigo-100 rounded-full p-3 mr-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>" />
    </svg>
  </div>
  <div>
    <h3 class="text-lg font-semibold mb-2"><%= title %></h3>
    <p class="text-gray-600"><%= description %></p>
  </div>
</div> 