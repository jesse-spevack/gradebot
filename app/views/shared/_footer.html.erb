<%# Footer component for the site
   Displays copyright information and links to legal pages
   Optional parameters:
   - classes: Additional custom classes (default: "")
%>

<% classes ||= "" %>

<footer class="bg-gray-50 mt-32 <%= classes %>">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="border-t border-gray-200 pt-8">
      <div class="text-center text-base text-gray-500">
        <p class="mt-4">
          <span class="px-2">
            <%= link_to "Terms of Service", terms_path, class: "text-blue-600 hover:text-blue-800" %>
          </span>
          <span class="px-2 border-l border-gray-300">
            <%= link_to "Privacy Policy", privacy_path, class: "text-blue-600 hover:text-blue-800" %>
          </span>
        </p>
        <p class="mt-4">&copy; <%= Time.current.year %> GradeBot. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer> 