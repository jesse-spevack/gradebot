<!-- Background with enhanced gradients -->
<div class="relative overflow-hidden bg-gradient-to-b from-indigo-50 via-white to-blue-50">
  <!-- Texture overlay -->
  <div class="absolute inset-0 opacity-20" style="background-image: url('data:image/svg+xml,%3Csvg width=\'20\' height=\'20\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M0 0h20v20H0z\' fill=\'%23000\' fill-opacity=\'.03\'/%3E%3C/svg%3E');"></div>
  
  <!-- Enhanced accent shapes -->
  <div aria-hidden="true" class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-[35rem] h-[35rem] bg-gradient-to-br from-blue-100 to-indigo-200 rounded-full opacity-30 blur-3xl transform rotate-12"></div>
    <div class="absolute -bottom-40 -left-40 w-[35rem] h-[35rem] bg-gradient-to-tr from-blue-200 to-indigo-100 rounded-full opacity-30 blur-3xl"></div>
  </div>

  <!-- Main content container with improved spacing -->
  <div class="relative mx-auto max-w-7xl px-6 sm:px-8 lg:px-10 py-20 md:py-28 lg:py-36">
    <div class="text-center">
      <!-- Premium badge with enhanced visibility -->
      <div class="mb-8 inline-block">
        <%= render "shared/hero_badge" %>
      </div>

      <!-- Main heading with enhanced typography -->
      <div class="mb-12 md:mb-16">
        <!-- Title with gradient text for visual emphasis -->
        <h1 class="text-5xl font-display font-black tracking-tight bg-gradient-to-r from-blue-900 via-indigo-800 to-blue-800 text-transparent bg-clip-text sm:text-6xl md:text-7xl mb-8 drop-shadow-sm">
          GradeB
          <span class="inline-block align-baseline hover:animate-spin transition-transform duration-300 w-[0.9em] h-[0.9em] translate-y-[0.1em] mx-[-0.1em] relative origin-center">
            <span class="relative w-full h-full block">
              <%= render "shared/hero_robot" %>
            </span>
          </span>
          t
        </h1>
        
        <!-- Subheading with enhanced visual hierarchy -->
        <p class="max-w-2xl mx-auto text-xl md:text-2xl text-indigo-900 font-medium leading-relaxed">
          Focus on planning and insights.<br class="hidden md:block"> Transform 
          <span class="text-blue-600 font-bold">hours of grading</span> 
          into
          <span class="bg-gradient-to-r from-indigo-600 to-blue-700 text-white px-3 py-1 font-bold rounded-md mx-1">minutes</span>
          of strategic review.
        </p>
      </div>

      <!-- Social proof section with enhanced visibility -->
      <div class="py-6 px-4 bg-white rounded-2xl shadow-md border border-indigo-100 mx-auto max-w-3xl mb-14">
        <%= render "shared/social_proof" %>
      </div>

      <!-- CTA section with improved emphasis -->
      <div class="max-w-md mx-auto space-y-6">
        <!-- Sign in with Google -->
        <div class="flex flex-col items-center">
          <p class="text-lg font-semibold text-indigo-900 mb-5">Get started with your Google account</p>
          
          <!-- Enhanced button styling -->
          <%= button_to "/auth/google_oauth2",
              method: :post,
              data: { turbo: false },
              class: "group flex items-center justify-center gap-3 w-full md:w-auto py-4 px-8 md:px-10 text-base md:text-lg font-medium bg-white text-gray-800 hover:text-indigo-700 hover:bg-indigo-50/70 hover:scale-[1.03] hover:border-indigo-300 hover:shadow-xl active:scale-[0.98] active:bg-indigo-100 active:shadow-inner rounded-xl shadow-lg transition-all duration-200 ease-in-out transform border border-gray-200" do %>
            <div class="w-6 h-6 flex-shrink-0">
              <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" style="display: block;">
                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
              </svg>
            </div>
            <span class="group-hover:text-indigo-700 group-active:text-indigo-800 transition-colors duration-200 font-semibold">Sign in</span>
          <% end %>
          
          <p class="text-sm text-indigo-700/80 mt-4">Quick and secure. No credit card required.</p>
        </div>

        <!-- Secondary CTA -->
        <div class="pt-6">
          <%= render "shared/cta_link", href: "#how-it-works", text: "Watch How It Works", classes: "text-indigo-600 font-bold hover:text-indigo-800 text-lg hover:underline underline-offset-4" %>
        </div>
      </div>
    </div>
  </div>
</div>