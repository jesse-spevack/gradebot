<%# Usage: render "shared/card", title: "Optional Title", subtitle: "Optional Subtitle" do %>
<%#   Content goes here %>
<%# end %>

<div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6">
  <% if local_assigns[:title] || local_assigns[:subtitle] %>
    <div class="mb-6">
      <% if local_assigns[:title] %>
        <h2 class="text-lg font-semibold text-gray-900 mb-1"><%= title %></h2>
      <% end %>
      <% if local_assigns[:subtitle] %>
        <p class="text-sm text-gray-600"><%= subtitle %></p>
      <% end %>
    </div>
  <% end %>

  <%= yield %>
</div>
