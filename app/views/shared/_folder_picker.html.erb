<div data-controller="folder-picker"
     data-folder-picker-loading-class="opacity-50 cursor-not-allowed"
     data-folder-picker-error-class="text-red-500">
  
  <button type="button" 
          data-testid="folder-picker"
          data-folder-picker-target="button"
          data-action="click->folder-picker#showPicker"
          class="inline-flex items-center gap-2 px-6 py-3 text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg shadow-sm"
          disabled>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776" />
    </svg>
    Select Folder
  </button>

  <div data-folder-picker-target="selectedFolder" 
       data-testid="selected-folder"
       class="mt-4 text-lg font-medium text-gray-900 hidden">
  </div>

  <div data-folder-picker-target="error"
       data-testid="folder-picker-error"
       class="hidden mt-2 text-sm font-medium text-red-600">
  </div>
</div>
