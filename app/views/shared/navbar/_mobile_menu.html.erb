<%# Mobile navigation menu %>
<!-- Backdrop -->
<div class="lg:hidden fixed inset-0 bg-gray-600 bg-opacity-75 transition-opacity duration-300 ease-in-out opacity-0 pointer-events-none"
     data-mobile-menu-target="backdrop"
     data-action="click->mobile-menu#close">
</div>

<!-- Menu panel -->
<div class="lg:hidden transition-transform duration-300 ease-in-out -translate-x-full fixed inset-y-0 left-0 w-[85%] max-w-sm bg-white shadow-xl z-50 flex flex-col"
     data-mobile-menu-target="menu">
  <!-- Close button -->
  <div class="absolute top-0 right-0 pt-4 pr-4">
    <button type="button"
            class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
            data-action="click->mobile-menu#close">
      <span class="sr-only">Close menu</span>
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Menu content -->
  <div class="flex-1 pt-16 pb-6 px-4 sm:px-6 overflow-y-auto">
    <nav class="space-y-3">
      <% if authenticated? %>
        <%= render "shared/navbar/nav_links", mobile: true %>
        
        <div class="border-t border-gray-200 mt-6 pt-6">
          <%= render "shared/navbar/auth_buttons", mobile: true %>
        </div>
      <% else %>
        <%= render "shared/navbar/auth_buttons", mobile: true %>
      <% end %>
    </nav>
  </div>

  <!-- Footer -->
  <div class="border-t border-gray-200 py-4 px-4 sm:px-6">
    <p class="text-xs text-gray-500 text-center">
      Â© <%= Time.current.year %> GradeBot
    </p>
  </div>
</div>
