<%# Authentication buttons shared between mobile and desktop views %>
<% if authenticated? %>
  <%= link_to session_path,
      data: { turbo_method: :delete },
      class: mobile ? 
        "flex items-center px-4 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md" :
        "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 #{mobile ? 'mr-3' : 'mr-1'}" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd" />
    </svg>
    Sign out
  <% end %>
<% else %>
  <%= button_to "/auth/google_oauth2",
      method: :post,
      data: { turbo: false },
      class: mobile ? 
        "px-4 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md" :
        "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
    Sign in with Google
  <% end %>
<% end %>
