<%# Navigation links shared between mobile and desktop views %>
<%= link_to grading_tasks_path, 
    class: "#{mobile ? 'flex items-center px-4 py-3 text-base w-full transition-colors duration-150' : 'flex items-center'} font-medium text-gray-700 hover:text-blue-600 #{mobile ? 'hover:bg-blue-50 active:bg-blue-100 rounded-xl' : ''}" do %>
  <div class="flex items-center #{mobile ? 'justify-between w-full' : ''}">
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="#{mobile ? 'h-6 w-6 mr-4' : 'h-5 w-5 mr-1'}" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
        <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
      </svg>
      <span class="#{mobile ? 'text-lg' : ''}">My Grading Tasks</span>
    </div>
    <% if mobile %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
<% end %>

<%= link_to new_grading_task_path, 
    class: "#{mobile ? 'flex items-center px-4 py-3 text-base w-full transition-colors duration-150' : 'flex items-center'} font-medium text-gray-700 hover:text-blue-600 #{mobile ? 'hover:bg-blue-50 active:bg-blue-100 rounded-xl' : ''}" do %>
