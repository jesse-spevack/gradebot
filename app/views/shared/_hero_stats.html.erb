<%# 
  Reusable stats component for displaying social proof metrics
  
  Optional parameters:
  - first_stat: First statistic value (default: '0+')
  - first_label: First statistic label (default: 'Active Teachers')
  - second_stat: Second statistic value (default: '0+')
  - second_label: Second statistic label (default: 'Partner Schools')
%>

<% first_stat ||= '0+' %>
<% first_label ||= 'Active Teachers' %>
<% second_stat ||= '0+' %>
<% second_label ||= 'Partner Schools' %>

<div class="flex items-center gap-8">
  <div>
    <div class="text-2xl font-bold text-blue-950"><%= first_stat %></div>
    <div class="text-sm text-blue-700"><%= first_label %></div>
  </div>
  <div class="h-8 w-px bg-blue-200"></div>
  <div>
    <div class="text-2xl font-bold text-blue-950"><%= second_stat %></div>
    <div class="text-sm text-blue-700"><%= second_label %></div>
  </div>
</div> 