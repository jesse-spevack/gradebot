<%#
  Renders a Call to Action section with title, description, and action button
  
  Required parameters:
  - title: The title text
  
  Optional parameters:
  - description: Additional description text (default: nil)
  - button_text: Text for the call-to-action button (default: "Sign in")
  - container_classes: Additional classes for the container (default: "py-16 bg-gradient-to-br from-indigo-600 to-blue-700 rounded-xl text-white text-center")
%>

<%
  container_classes = local_assigns[:container_classes] || "py-16 bg-gradient-to-br from-indigo-600 to-blue-700 rounded-xl text-white text-center"
  button_text = local_assigns[:button_text] || "Sign in"
%>

<section class="<%= container_classes %>">
  <h2 class="text-3xl font-bold mb-6"><%= title %></h2>
  
  <% if local_assigns[:description].present? %>
    <p class="text-xl mb-8 max-w-2xl mx-auto"><%= description %></p>
  <% end %>
  
  <div class="max-w-md mx-auto">
    <p class="text-lg mb-5 font-medium">Get started with your Google account</p>
    <div class="flex justify-center">
      <%= button_to "/auth/google_oauth2",
          method: :post,
          data: { turbo: false },
          class: "group flex items-center justify-center gap-3 py-3 px-6 md:px-8 text-base md:text-lg font-medium bg-white text-gray-700 hover:bg-gray-50 hover:scale-105 hover:border-blue-300 hover:shadow-lg active:scale-95 active:bg-gray-100 active:shadow-inner rounded-lg shadow-md transition-all duration-300 ease-in-out transform border border-gray-300" do %>
        <div class="w-6 h-6 flex-shrink-0">
          <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" style="display: block;">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
          </svg>
        </div>
        <span class="group-hover:text-blue-600 group-active:text-blue-800 transition-colors duration-200"><%= button_text %></span>
      <% end %>
    </div>
    <p class="text-sm mt-4 text-indigo-200">Quick and secure. No credit card required.</p>
  </div>
</section> 