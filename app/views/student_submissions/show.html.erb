<% content_for :header do %>
  <%= render "shared/page_header", 
             title: "Student Submission",
             subtitle: "Detailed grading information" do %>
    <div class="flex items-center justify-between w-full">
      <div>
        <%= link_to grading_task_path(@grading_task), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors duration-150" do %>
          <%= render "shared/icons/back", class: "h-5 w-5 mr-1" %>
          <span>Back to Assignment</span>
        <% end %>
      </div>
      <div id="header_status">
        <%= render "student_submissions/header_status", student_submission: @student_submission %>
      </div>
    </div>
  <% end %>
<% end %>

<% content_for :content do %>
  <%= turbo_stream_from "student_submission_#{@student_submission.id}" %>

  <div id="<%= dom_id(@student_submission) %>_detail">
    <%= render "student_submissions/detail", student_submission: @student_submission %>
  </div>
<% end %>

<%= render "shared/page_wrapper" %> 